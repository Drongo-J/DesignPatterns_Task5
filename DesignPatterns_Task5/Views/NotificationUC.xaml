<UserControl x:Class="DesignPatterns_Task5.Views.NotificationUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesignPatterns_Task5.Views"
             mc:Ignorable="d" Height="50" Width="300">
    <Grid Background="White">
        <TextBlock Text="{Binding Text}" FontSize="20" TextAlignment="Center" HorizontalAlignment="Left" Width="230" Margin="0,-1,0,0" RenderTransformOrigin="0.509,1.067"></TextBlock>
        <Image Source="{Binding ImagePath}" Stretch="Fill" Margin="235,0,0,0"></Image>
    </Grid>
</UserControl>
